
<div class="outer-div">
        <fieldset>
            <legend>Product Information:</legend>
            <div class="form-group">
                <label for="product_name" class="lf">
                    Product Name:
                </label>
                <%= product.product_name %>
            </div>
            <div class="form-group">
                <label for="product_type" class="lf">Product Type:</label>
                <%= product.product_type %>
            </div>
            <div class="form-group">
                <label for="product_size" class="lf">Product Size:</label>
                <%= product.product_size %>
            </div>
            <div class="form-group">
                <label for="quantity" class="lf">Quantity:</label>
                <%= product.product_qty %>
            </div>
            <div class="form-group">
                <label for="color" class="lf">Product Color:</label>
                <span style="background-color: <%= product.product_color %>;"><%= product.product_name %></span>
            </div>
            <div class="form-group">
                <label for="product-image" class="lf">Product Image:</label>
               <% product.images.forEach(function(image){ %>

                <img src="/uploads/products/<%= image.filename %>" width="40px" height="40px">

              <% }) %>
               
               
            </div>
            
        </fieldset>

</div>